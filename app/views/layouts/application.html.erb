<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <%= render "shared/userslinks" %>
      <nav>
        <%= link_to 'Food', foods_path %>
        <%= link_to 'Recipe', recipe_path %>
        <%= link_to 'Inventory', inventory_path %>
        <%= link_to 'Shopping List' %>    
      </nav>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
    <footer>
    </footer>
  </body>
</html>
